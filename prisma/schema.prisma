generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RSVP {
  id               Int      @id @default(autoincrement())
  groupId          String?  // Links members of the same registration group
  name             String
  email            String
  attending        Boolean
  guests           Int      @default(1)
  dietaryQuestions String? // Combined field for flexibility
  attendingSunday  Boolean? // For Indi's birthday party on Sunday
  createdAt        DateTime @default(now())
}

model GuestbookMessage {
  id        Int      @id @default(autoincrement())
  name      String
  message   String
  createdAt DateTime @default(now())
}
